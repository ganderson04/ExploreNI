<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="Measurement"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="measurement_distance"
            app:defaultValue="false"
            app:summaryOff="Distances will be displayed in imperial units."
            app:summaryOn="Distances will be displayed in metric units."
            app:title="Use metric for distances"
            app:iconSpaceReserved="false"/>

        <SwitchPreferenceCompat
            app:key="measurement_temperature"
            app:defaultValue="false"
            app:summaryOff="Temperature will be displayed in Celsius."
            app:summaryOn="Temperature will be displayed in Fahrenheit."
            app:title="Use Fahrenheit"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

</PreferenceScreen>
