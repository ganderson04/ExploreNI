<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cvItineraryItem"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivItineraryLocation"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="fitXY"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/ivItineraryLocation"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvItineraryItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/ibRemoveItem"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_delete_black_24dp"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <ImageButton
                android:id="@+id/ibMoveItem"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/ic_move_black_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>
        
    </androidx.cardview.widget.CardView>

</RelativeLayout>